{
    "metadata": [
        {
            "src": [
                {
                    "src": "../Packages/Verve.Core",
                    "files": [
                        "**/*.cs"
                    ],
                    "exclude": [
                        "**/Tests/**",
                        "**/Demo/**",
                        "**/Samples/**",
                        "**/Properties/AssemblyInfo.cs",
                        "**/AssemblyInfo.cs"
                    ]
                },
                {
                    "src": "../Packages/Verve.UniEx",
                    "files": [
                        "**/*.cs"
                    ],
                    "exclude": [
                        "**/Tests/**",
                        "**/Demo/**",
                        "**/Samples/**",
                        "**/Properties/AssemblyInfo.cs",
                        "**/AssemblyInfo.cs"
                    ]
                }
            ],
            "globalNamespaceId": "Global",
            "filter": "filterConfig.yml",
            "dest": "api"
        }
    ],
    "build": {
        "globalMetadata": {
            "_appTitle": "Verve",
            "_appFooter": "Verve",
            "_enableSearch": true
        },
        "content": [
            {
                "files": [
                    "toc.yml",
                    "index.md"
                ]
            },
            {
                "src": "api",
                "files": [
                    "*.yml"
                ],
                "dest": "api"
            }
        ],
        "resource": [
            {
                "files": [
                    "resources/**/*"
                ]
            }
        ],
        "sitemap": {
            "baseUrl": "https://verloren-droom.github.io/Verve",
            "changefreq": "weekly",
            "fileOptions": {
                "api/*": {
                    "changefreq": "daily"
                }
            }
        },
        "xref": [
            "https://normanderwan.github.io/UnityXrefMaps/xrefmap.yml"
        ],
        "xrefService": [
            "https://xref.docs.microsoft.com/query?uid={uid}"
        ],
        "dest": "./_site"
    }
}